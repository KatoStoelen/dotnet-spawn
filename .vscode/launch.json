{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DotnetSpawn",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/DotnetSpawn/bin/Debug/net6.0/DotnetSpawn.dll",
            "args": [
                // "${input:command}",
                // "${input:subCommand}"
                "template",
                "expressions",
                "functions"
            ],
            "cwd": "${workspaceFolder}/src/DotnetSpawn",
            "console": "externalTerminal",
            "justMyCode": false,
            "suppressJITOptimizations": true,
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "inputs": [
        {
            "id": "command",
            "description": "Enter command",
            "type": "promptString"
        },
        {
            "id": "subCommand",
            "description": "Enter sub-command",
            "type": "promptString",
            "default": ""
        }
    ]
}